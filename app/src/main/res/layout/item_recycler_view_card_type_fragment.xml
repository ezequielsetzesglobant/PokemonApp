<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_view_item_recycler_view_card_type_fragment_margin_bottom"
    app:cardBackgroundColor="@color/opaque_black_constraint_layout_item_recycler_view_card_type_fragment_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_view_item_recycler_view_card_type_fragment_type"
            android:layout_width="@dimen/image_view_item_recycler_view_card_type_fragment_width"
            android:layout_height="@dimen/image_view_item_recycler_card_type_fragment_view_height"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_view_item_recycler_view_card_type_fragment_type"
            style="@style/TextViewItemRecyclerViewCardTypeFragmentStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_view_item_recycler_view_card_type_fragment_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_view_item_recycler_view_card_type_fragment_type" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
