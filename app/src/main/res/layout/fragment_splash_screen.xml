    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_screen_image"
    tools:context=".fragment.SplashScreenFragment">

    <ProgressBar
        android:id="@+id/progress_bar_splash_screen_fragment_load_wait"
        android:layout_width="@dimen/progress_bar_splash_screen_fragment_width"
